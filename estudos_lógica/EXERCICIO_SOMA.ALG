Algoritmo "exercicio_soma"
// Fazer um programa para ler dois valores inteiros X e Y,
// e depois mostrar na tela o valor da soma destes

Var

   x, y, soma: inteiro

Inicio

      escreva("O valor de X = ")
      leia(x)

      escreva("O valor de Y = ")
      leia(y)
      
      soma <- x + y
      
      escreva("Soma = ", soma)
      
      // Conclusão do Exercício - Soma

Fimalgoritmo